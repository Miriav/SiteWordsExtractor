<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <!-- console appender -->
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-4timestamp [%thread] %-5level %logger - %message%newline" />    
    </layout>
  </appender>

  <!-- file appender -->
  <appender name="FileAppender" type="log4net.Appender.FileAppender">
    <file value="log.txt" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss,fff} [%thread] %-5level %logger - %message%newline" />    
    </layout>
  </appender>
  
  <root>
    <level value="DEBUG" />
    <appender-ref ref="Console" />
    <appender-ref ref="FileAppender" />
  </root>

  <!-- Print only messages of level WARN or above in the package Abot -->
  <logger name="Abot.Crawler.WebCrawler">
    <level value="INFO" />
  </logger>
  <logger name="Abot.Core.ManualThreadManager">
    <level value="WARN" />
  </logger>
  <logger name="Abot.Core.HyperLinkParser">
    <level value="WARN" />
  </logger>
  <logger name="Abot.Core.PageRequester">
    <level value="WARN" />
  </logger>
  
</log4net>
